#!/usr/bin/expect -f
set host [lindex $argv 0]
set port [lindex $argv 1]
set user [lindex $argv 2]
set password [lindex $argv 3]
set timeout 10
spawn ssh -p $port $user@$host -o PreferredAuthentications=password -o PubkeyAuthentication=no
match_max 100000

expect {
    "*assword*"
    {
        send -- "$password\n"
    }
    "*passphrase*"
    {
        send -- "$password\n"
    }
    "continue connecting"
    {
        send -- "yes\n"
    }
}
interact
